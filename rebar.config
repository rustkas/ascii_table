{erl_opts, [debug_info]}.
{deps, []}.

{plugins, [rebar3_format,rebar3_hex]}.


{format, [
    {files, ["src/*.erl","test/*.erl"]},
    {formatter, default_formatter},
    {options, #{ribbon=>80 }}   
]}.

{edoc_opts, [
  {doclet, edoc_doclet_chunks},
  {layout, edoc_layout_chunks},
  {dir, "doc"}]}.